<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SistemaToditoApp3.MainPage">


    <StackLayout>
        <Label Text="Bienvenido a Sistema Todito" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <Label Text="Usuario" />
        <Entry x:Name="txtUsuario" />
        <Label Text="Contraseña" />
        <Entry x:Name="txtContrasena" />
        <Button Text="Iniciar Sesión"/>
        
        <!--Prueba conexion con un boton-->
        <Button Text="Prueba Conexion" Clicked="Button_Clicked"/>
        
    </StackLayout>
    

</ContentPage>
